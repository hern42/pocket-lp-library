ScreenManagement:
    MenuScreen:
    DisplayScreen:
    SearchScreen:
    AddNewScreen:

<MenuScreen>:
    name: 'menu'
    id: menu
    
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: root.introtext
            Label:
                size_hint: .2, 1
                text: 'nbr lps: ' + str(root.affiche_nbr_lp())
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, .5
                    Rectangle:
                        pos: self.pos
                        size: self.size
        BoxLayout:
            size_hint: 1, .1
            Button:
                text: 'See LP lists'
                on_press: app.root.current= 'display'
            Button:
                text: 'Search the db'
                on_press: app.root.current= 'search'
        BoxLayout:
            size_hint: 1, .1
            Button:
                text: 'Add new LP'
                on_press: app.root.current= 'addnew'
            Button:
                text: 'Exit'
                on_press: app.stop()

<DisplayScreen>:
    on_enter: root.list_lp = 'The list of LP will be showed here...'
    name: 'display'
    id: display
    howmany_input: howmany

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, .1
            Label:
                text: 'Display LP library'
            Button:
                text: '<back>'
                on_press: app.root.current = 'menu'
        BoxLayout:
            size_hint: 1, .1
            Label:
                text: 'Sort by: artist'
            CheckBox:
                group: 'display1'
                text: 'artist'
                on_active: root.sort_str = self.text
            Label:
                text: 'album'
            CheckBox:
                group: 'display1'
                text: 'title'
                on_active: root.sort_str = self.text
            Label:
                text: 'year'
            CheckBox:
                group: 'display1'
                text: 'year'
                on_active: root.sort_str = self.text
        BoxLayout:
            size_hint: 1, .1
            Label:
                text: 'how many?'
            TextInput:
                id: howmany
                text: '??'
            Button:
                text: 'go!'
                on_press: root.affiche_list_sorted()
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            scroll_type: ['bars']
            bar_width: 10
            bar_color: 1, 0, 0, 1   # red
            bar_inactive_color: 0, 0, 1, 1   # blue
            effect_cls: 'ScrollEffect'
            Label:
                id: liste_lp
                size_hint: (1, None)
                size: self.texture_size
                text: root.list_lp
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, .5
                    Rectangle:
                        pos: self.pos
                        size: self.size

<SearchScreen>:
    name: 'search'
    id: search
    on_enter: root.search_result = 'The list of LP will be showed here...'
    search_input: searchstring

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, .1
            Label:
                text: 'Search the db...'
            Button:
                text: '<back>'
                on_press: app.root.current = 'menu'
        BoxLayout:
            size_hint: 1, .1
            Label:
                text: 'artist'
            CheckBox:
                group: 'search1'
                text: 'artist'
                on_active: root.search_str = self.text
            Label:
                text: 'title'
            CheckBox:
                group: 'search1'
                text: 'title'
                on_active: root.search_str = self.text
            Label:
                text: 'year'
            CheckBox:
                group: 'search1'
                text: 'year'
                on_active: root.search_str = self.text
        BoxLayout:
            size_hint: 1, .1
            TextInput:
                id: searchstring
                text: ''
            Button:
                text: 'go!'
                on_press: root.affiche_list_search()
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            scroll_type: ['bars']
            bar_width: 10
            bar_color: 1, 0, 0, 1   # red
            bar_inactive_color: 0, 0, 1, 1   # blue
            effect_cls: 'ScrollEffect'
            Label:
                id: research_result
                size_hint: (1, None)
                size: self.texture_size
                text: root.search_result
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, .5
                    Rectangle:
                        pos: self.pos
                        size: self.size

<AddNewScreen>:
    name: 'addnew'
    id: addnew

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, .3
            Label:
                text: 'Add new LP'
            Button:
                text: '<back>'
                on_press: app.root.current = 'menu'
        BoxLayout:
            Label:
                text: 'artist'
            TextInput:
                id: newartist
                text: ''
        BoxLayout:
            Label:
                text: 'album'
            TextInput:
                id: newalbum
                text: ''
        BoxLayout:
            Label:
                text: 'year'
            TextInput:
                id: newyear
                text: ''
        BoxLayout:
            Label:
                text: 'format'
            TextInput:
                id: newformat
                text: ''
        BoxLayout:
            Label:
                text: 'comment'
            TextInput:
                id: newcomment
                text: ''
        BoxLayout:
            size_hint: 1, .3
            Button:
                text: 'go!'
                on_press: pass
