ScreenManagement:
    MenuScreen:
    DisplayScreen:
    SearchScreen:
    AddNewScreen:

<MenuScreen>:
    name: 'menu'
    id: menu
    
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Appli LPs'
            Label:
                text: 'nbr_lps: ' + str(root.affiche_nbr_lp())
        BoxLayout:
            Button:
                text: 'See LP lists'
                on_press: app.root.current= 'display'
            Button:
                text: 'Search the db'
                on_press: app.root.current= 'search'
        BoxLayout:
            Button:
                text: 'Add new LP'
                on_press: app.root.current= 'addnew'
            Button:
                text: 'Exit'
                on_press: app.stop()

<DisplayScreen>:
    name: 'display'
    id: display

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, .25
            Label:
                text: 'Display LP library'
            Button:
                text: '<back>'
                on_press: app.root.current = 'menu'
        BoxLayout:
            size_hint: 1, .25
            Label:
                text: 'Sort by: artist'
            CheckBox:
                group: 'display1'
                on_active: pass
            Label:
                text: 'album'
            CheckBox:
                group: 'display1'
                on_active: pass
            Label:
                text: 'year'
            CheckBox:
                group: 'display1'
                on_active: pass
        BoxLayout:
            size_hint: 1, .25
            Label:
                text: 'how many?'
            TextInput:
                id: howmany
                text: '??'
            Button:
                text: 'go!'
                on_press: pass
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            scroll_type: ['bars']
            bar_width: 10
            bar_color: 1, 0, 0, 1   # red
            bar_inactive_color: 0, 0, 1, 1   # blue
            effect_cls: 'ScrollEffect'

            Label:
                size_hint: (1, None)
                size: self.texture_size
                text: root.affiche_liste_lp()

<SearchScreen>:
    name: 'search'
    id: search

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Search the db...'
            Button:
                text: '<back>'
                on_press: app.root.current = 'menu'
        BoxLayout:
            Label:
                text: 'artist'
            CheckBox:
                group: 'search1'
                on_active: pass
            Label:
                text: 'album'
            CheckBox:
                group: 'search1'
                on_active: pass
            Label:
                text: 'year'
            CheckBox:
                group: 'search1'
                on_active: pass
        BoxLayout:
            TextInput:
                id: searchstring
                text: '??'
            Button:
                text: 'go!'
                on_press: pass
        BoxLayout:
            Label:
                text: 'Search results...\nAnd more results...'

<AddNewScreen>:
    name: 'addnew'
    id: addnew

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Add new LP'
            Button:
                text: '<back>'
                on_press: app.root.current = 'menu'
        BoxLayout:
            Label:
                text: 'artist'
            TextInput:
                id: newartist
                text: ''
        BoxLayout:
            Label:
                text: 'album'
            TextInput:
                id: newalbum
                text: ''
        BoxLayout:
            Label:
                text: 'year'
            TextInput:
                id: newyear
                text: ''
        BoxLayout:
            Label:
                text: 'format'
            TextInput:
                id: newformat
                text: ''
        BoxLayout:
            Label:
                text: 'comment'
            TextInput:
                id: newcomment
                text: ''
        BoxLayout:
            Button:
                text: 'go!'
                on_press: pass
